{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["@playwright/test", "node"],
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "tests/e2e/**/*",
    "tests/shared/**/*",
    "playwright.config.ts"
  ],
  "exclude": [
    "tests/unit/**/*",
    "node_modules",
    "vitest.config.ts",
    "vitest.config.unit.ts",
    "**/*.vitest.*"
  ]
}