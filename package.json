{
  "name": "kitchenpantry-crm",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 20",
    "preview": "vite preview",
    "docs:lint": "markdownlint docs/**/*.md --config .config/markdownlint.json",
    "docs:links": "markdown-link-check docs/**/*.md",
    "docs:validate": "npm run docs:lint && npm run docs:links",
    "validate": "npm run type-check && npm run lint && npm run build",
    "clean": "rm -rf dist reports/*.json logs/*.log *.tsbuildinfo",
    "clean:all": "rm -rf dist node_modules package-lock.json",
    "fresh": "npm run clean && rm -rf node_modules && npm install",
    "organize": "npm run clean && git status",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "analyze": "npm run build && npx vite-bundle-visualizer",
    "test": "node tests/mcp/run-all.js",
    "test:auth": "node tests/mcp/auth.mcp.js",
    "test:crud": "node tests/mcp/crud.mcp.js",
    "test:dashboard": "node tests/mcp/dashboard.mcp.js",
    "test:mobile": "node tests/mcp/mobile.mcp.js",
    "test:mcp": "node tests/mcp/run-all.js",
    "test:mcp:auth": "node tests/mcp/auth.mcp.js",
    "test:mcp:crud": "node tests/mcp/crud.mcp.js",
    "test:mcp:dashboard": "node tests/mcp/dashboard.mcp.js",
    "test:mcp:mobile": "node tests/mcp/mobile.mcp.js",
    "test:backend": "vitest run tests/backend",
    "test:backend:watch": "vitest tests/backend",
    "test:backend:coverage": "vitest run tests/backend --coverage",
    "test:db": "vitest run tests/backend/database",
    "test:performance": "vitest run tests/backend/performance",
    "test:security": "vitest run tests/backend/security",
    "test:integrity": "vitest run tests/backend/integrity",
    "test:import-backend": "vitest run tests/backend/imports",
    "playwright:install": "npx playwright install",
    "playwright:report": "npx playwright show-report",
    "playwright:trace": "npx playwright show-trace",
    "test:mcp-playwright": "MCP_TARGET=stg playwright test --config=tests/mcp-playwright/playwright.config.js",
    "test:mcp-playwright:local": "MCP_TARGET=local playwright test --config=tests/mcp-playwright/playwright.config.js",
    "test:mcp-playwright:ui": "MCP_TARGET=stg playwright test --config=tests/mcp-playwright/playwright.config.js --ui",
    "test:mcp-playwright:debug": "MCP_TARGET=local playwright test --config=tests/mcp-playwright/playwright.config.js --debug",
    "test:mcp-playwright:report": "playwright show-report test-results/mcp-playwright-report"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/supabase-js": "^2.55.0",
    "@tanstack/react-query": "^5.85.0",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@types/papaparse": "^5.3.16",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.263.1",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.0",
    "recharts": "^3.1.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^5.1.0",
    "yup": "^1.7.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/ui": "^1.6.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "markdown-link-check": "^3.13.7",
    "markdownlint-cli": "^0.41.0",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "uuid": "^9.0.1",
    "vite": "^4.4.5",
    "vitest": "^1.6.1"
  }
}
