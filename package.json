{
  "name": "kitchenpantry-crm",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 20",
    "ui:scan": "git grep -nE '(\\[[^\\]]+\\]|#[0-9a-fA-F]{3,8})' -- ':!*.svg' src || true",
    "preview": "vite preview",
    "docs:lint": "markdownlint docs/**/*.md",
    "docs:links": "markdown-link-check docs/**/*.md",
    "docs:validate": "npm run docs:lint && npm run docs:links",
    "validate": "npm run type-check && npm run lint && npm run build",
    "clean": "rm -rf dist reports/*.json *.tsbuildinfo",
    "clean:all": "rm -rf dist node_modules package-lock.json",
    "fresh": "npm run clean && rm -rf node_modules && npm install",
    "organize": "npm run clean && git status",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "analyze": "npm run build && npx vite-bundle-visualizer",
    "validate:architecture": "node scripts/validate-architecture.js",
    "lint:architecture": "./scripts/lint-architecture.sh",
    "validate:performance": "./scripts/performance-monitor.sh",
    "optimize:performance": "node scripts/optimize-performance.js",
    "quality-gates": "./scripts/run-quality-gates.sh",
    "dev:setup": "./scripts/dev-setup.sh",
    "dev:assist": "./scripts/dev-assist.sh",
    "dev:health": "./scripts/dev-assist.sh health",
    "dev:fix": "./scripts/dev-assist.sh fix",
    "test:quality": "node scripts/test-quality-monitor.js",
    "test": "node tests/mcp/run-all.js",
    "test:auth": "node tests/mcp/auth.mcp.js",
    "test:crud": "node tests/mcp/crud.mcp.js",
    "test:dashboard": "node tests/mcp/dashboard.mcp.js",
    "test:mobile": "node tests/mcp/mobile.mcp.js",
    "test:backend": "vitest run tests/backend",
    "test:backend:watch": "vitest tests/backend",
    "test:backend:coverage": "vitest run tests/backend --coverage",
    "test:db": "vitest run tests/backend/database",
    "test:performance": "vitest run tests/backend/performance",
    "test:security": "vitest run tests/backend/security",
    "test:integrity": "vitest run tests/backend/integrity",
    "test:import-backend": "vitest run tests/backend/imports",
    "test:architecture": "vitest run tests/architecture",
    "test:architecture:state": "vitest run tests/architecture/state-boundaries.test.ts",
    "test:architecture:components": "vitest run tests/architecture/component-placement.test.ts",
    "test:architecture:performance": "vitest run tests/architecture/performance-patterns.test.ts",
    "test:architecture:eslint": "vitest run tests/architecture/eslint-rules.test.ts",
    "debt:audit": "node scripts/technical-debt-monitor.js audit",
    "debt:scan": "node scripts/technical-debt-monitor.js scan",
    "debt:report": "node scripts/technical-debt-monitor.js report",
    "debt:validate": "node scripts/technical-debt-monitor.js validate",
    "debt:issues": "node scripts/create-technical-debt-issues.js",
    "hooks:install": "cp .githooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
    "lint:ui": "eslint src --ext ts,tsx --max-warnings 0 --config .eslintrc.cjs",
    "test:ui-compliance": "npm run lint:ui && ./scripts/validate-design-tokens.sh",
    "test:ui-consistency": "vitest run tests/ui-consistency.test.tsx",
    "validate:design-tokens": "./scripts/validate-design-tokens.sh",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/supabase-js": "^2.55.0",
    "@tanstack/react-query": "^5.85.0",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@types/papaparse": "^5.3.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.263.1",
    "openai": "^5.15.0",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.0",
    "recharts": "^3.1.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^5.1.0",
    "xlsx": "^0.18.5",
    "yup": "^1.7.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint": "^9.6.1",
    "@types/glob": "^8.1.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.8",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "markdown-link-check": "^3.13.7",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "uuid": "^9.0.1",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
